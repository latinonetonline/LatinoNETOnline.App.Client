<MatVirtualScroll style="height: 400px;overflow-x: hidden;overflow-y: auto" ItemType="string" Items="Items" ItemHeight="50">
    <ItemTemplate>
        <MatButton Icon=@Icon OnClick="@(async () => await OnClick.InvokeAsync(@context))" Label="@context" Type="button"></MatButton>
    </ItemTemplate>
</MatVirtualScroll>

@code {

    [Parameter]
    public IEnumerable<string> Items { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public EventCallback<string> OnClick { get; set; }

}
